<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id        = "com.loecsen.orizonlang"
	versionCode="10"
	version   = "1.0.0">

	<name>Orizon Lang</name>

	<description>
		Easily learn a few sentences for your travels
	</description>

	<author href="http://www.moon1.org" email="contact@moon1.tv">
		Moon One
	</author>

	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/media"/>

	<preference name="phonegap-version" value="2.9.0" />
	<preference name="fullscreen" value="true" />
	<preference name="load-url-timeout" value="60000" />
	<access origin="*" />
	<plugins>
	    <plugin name="App" value="org.apache.cordova.App"/>
	    <plugin name="Device" value="org.apache.cordova.Device"/>
	    <plugin name="Media" value="org.apache.cordova.AudioHandler"/>
	    <plugin name="File" value="org.apache.cordova.FileUtils"/>
	    <plugin name="NetworkStatus" value="org.apache.cordova.NetworkManager"/>
	    <plugin name="Storage" value="org.apache.cordova.Storage"/>
	    <plugin name="FileTransfer" value="org.apache.cordova.FileTransfer"/>
	    <plugin name="SplashScreen" value="org.apache.cordova.SplashScreen"/>
	    <plugin name="Globalization" value="org.apache.cordova.Globalization"/>
	</plugins>
	<!-- icons for iOS -->
	<icon src="images/iOS/icon/icon-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="images/iOS/icon/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="images/iOS/icon/icon-114.png" gap:platform="ios" width="114" height="114" />
	<!-- retina iPad support: PhoneGap 2.5.0+ only -->
	<icon src="icons/iOS/icon/icon-144.png" gap:platform="ios" width="144" height="144" />

	<!-- icons for Android  -->
	<icon src="images/android/icon/icon-ldpi-36.png" gap:platform="android" gap:density="ldpi" />
	<icon src="images/android/icon/icon-mdpi-48.png" gap:platform="android" gap:density="mdpi" />
	<icon src="images/android/icon/icon-hdpi-72.png" gap:platform="android" gap:density="hdpi" />
	<icon src="images/android/icon/icon-xhdpi-96.png" gap:platform="android" gap:density="xhdpi" />

	<!-- icons for Blackberry 
	<icon src="images/bb/icon.png" gap:platform="blackberry" />
	<icon src="iimages/bb/icon_hover.png" gap:platform="blackberry" gap:state="hover"/>	
-->
	<!-- icons for Windows Phone 
	<icon src="images/winphone/icon.png" gap:platform="winphone" />
	<icon src="images/winphone/tileicon.png" gap:platform="winphone" gap:role="background" />
-->

	<!-- Splash for iOS -->
	<gap:splash src="images/iOS/splash/Default~iphone-320-480.png" width="320" height="480" />
	<gap:splash src="images/iOS/splash/Default@2x~iphone-640-960.png" width="640" height="960" />
	<gap:splash src="images/iOS/splash/Default-568h@2x~iphone-640-1136.png" width="640" height="1136" />
	<gap:splash src="images/iOS/splash/Default-Landscape~ipad-1028-748.png" width="1024" height="748" />
	<gap:splash src="images/iOS/splash/Default-Portrait~ipad-768-1004.png" width="768" height="1004" />
	<!-- retina iPad support: PhoneGap 2.5.0+ only -->
	<gap:splash src="images/iOS/splash/Default-Landscape@2x-ipad-2048-1496.png" width="2048" height="1496" />
	<gap:splash src="images/iOS/splash/Default-Portrait@2x~ipad-1536-2008.png" width="1536" height="2008" />

	<!-- Splash for Android -->
	<gap:splash src="images/android/splash/ldpi_320-200.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="images/android/splash/mdpi_480-320.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="images/android/splash/hdpi_800-480.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="images/android/splash/xhdpi_1280-720.png" gap:platform="android" gap:density="xhdpi" />

	<!-- Splash for BlackBerry 
	<gap:splash src="splash/bb/splash.png" gap:platform="blackberry" />
-->
	<!-- Splash for Windows Phone 
	<gap:splash src="splash/winphone/splash.jpg" gap:platform="winphone" />
-->

</widget>
